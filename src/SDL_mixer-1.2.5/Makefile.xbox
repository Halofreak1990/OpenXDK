	timidity/sdl_c.c			\
	timidity/tables.c		\
	timidity/timidity.c
	
MIKMOD = \
	mikmod/drv_nos.c		\
	mikmod/drv_sdl.c		\
	mikmod/load_it.c		\
	mikmod/load_mod.c		\
	mikmod/load_s3m.c		\
	mikmod/load_xm.c		\
	mikmod/mdreg.c			\
	mikmod/mdriver.c		\
	mikmod/mloader.c		\
	mikmod/mlreg.c			\
	mikmod/mlutil.c		\
	mikmod/mmalloc.c		\
	mikmod/mmerror.c		\
	mikmod/mmio.c			\
	mikmod/mplayer.c		\
	mikmod/munitrk.c		\
	mikmod/mwav.c			\
	mikmod/npertab.c		\
	mikmod/sloader.c		\
	mikmod/virtch.c		\
	mikmod/virtch2.c		\
